@model YellowMovieProject.Models.Movie

@{
    ViewBag.Title = "Add movie";
}


<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="card p-4 mb-4 border-3">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Add new movie</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row justify-content-start">
                            <div class="form-group col-sm-12 col-md-10 col-lg-8">
                                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 required" })
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group col-sm-12 col-md-10 col-lg-8">
                                @Html.LabelFor(model => model.Director, htmlAttributes: new { @class = "control-label col-md-2  required" })
                                @Html.EditorFor(model => model.Director, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })
                            </div>

                            <div class="row col-sm-12 col-md-10 col-lg-8 pe-0">
                                <div class="form-group col-sm-6 pe-0">
                                    @Html.LabelFor(model => model.ReleaseYear, htmlAttributes: new { @class = "control-label  required" })
                                    @Html.EditorFor(model => model.ReleaseYear, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ReleaseYear, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-group col-sm-6 pe-0">
                                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label  required" })
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.01" } })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group col-sm-12 col-md-10 col-lg-8">
                                @Html.LabelFor(model => model.PosterURL, htmlAttributes: new { @class = "control-label col-sm-9" })
                                @Html.EditorFor(model => model.PosterURL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PosterURL, "", new { @class = "text-danger" })
                            </div>

                            @*--- Buttons ---*@
                            <div class="row justify-content-center mt-4">
                                <div class="col-12 col-xs-8 col-sm-7 col-lg">
                                    <button type="button" title="Go back to shopping cart" onclick="history.back()"
                                            class="btn btn-secondary btn-lg px-3 m-1 col-12">
                                        Go back
                                    </button>
                                </div>

                                <div class="col-12 col-xs-8 col-sm-7 col-lg">
                                    <button title="Will empty form" class="btn btn-danger btn-lg px-3 m-1 col-12"
                                            type="reset">
                                        Reset
                                    </button>
                                </div>
                                <div class="col-12 col-xs-8 col-sm-7 col-lg">
                                    <button title="Continue to payment" class="btn btn-success btn-lg px-3 m-1 col-12"
                                            type="submit">
                                        Continue
                                    </button>
                                </div>
                            </div>
                            
                        </div>
                        </div>
                    }
                    <br />
                    <h3 class="text-success">@ViewBag.AddMovieSuccessMessage</h3>
                </div>
            </div>
        </div>
    </div>
</section>

